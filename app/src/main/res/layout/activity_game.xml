<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".game_activity">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="418dp"
        android:layout_height="221dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBoxLives"
        app:srcCompat="@drawable/square_for_menu" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="403dp"
        android:layout_height="96dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/pngtreewood_button_game_6965184_1_"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.488" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="@string/alreadyGuessedWordsText"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="@string/alreadyGuessedLettersText"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBoxGuess"
        app:layout_constraintVertical_bias="0.082" />

    <TextView
        android:id="@+id/alreadyGuessedLetters"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/txtBoxGuess"
        app:layout_constraintVertical_bias="0.082" />

    <TextView
        android:id="@+id/alreadyGuessedWords"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.826"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/alreadyGuessedLetters"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/txtBoxWordToBeGuessed"
        android:layout_width="367dp"
        android:layout_height="87dp"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.144" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="367dp"
        android:layout_height="98dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBoxWordToBeGuessed"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageBoat"
            android:layout_width="91dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:contentDescription="@string/contentDescImageTChest"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/kisspng_piracy_drawing_party_coloring_book_boat_pirate_5ab5efebb72bc0_2784802715218728757503" />

        <ImageView
            android:id="@+id/imageChest"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginStart="185dp"
            android:contentDescription="@string/contentDescImageTChest"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/treasurechest" />
    </LinearLayout>

    <EditText
        android:id="@+id/txtBoxGuess"
        android:layout_width="272dp"
        android:layout_height="50dp"
        android:hint="@string/txtInputHint"
        android:imeOptions="actionSend"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView10"
        app:layout_constraintVertical_bias="0.047" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lives left:"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/txtBoxWordToBeGuessed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.216" />

    <TextView
        android:id="@+id/txtBoxLives"
        android:layout_width="69dp"
        android:layout_height="38dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="20dp"
        android:text="5"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/txtBoxWordToBeGuessed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />




</androidx.constraintlayout.widget.ConstraintLayout>